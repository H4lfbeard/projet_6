{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}

    <header class="masthead" style="background-image: url('{{ asset('img/register-bg.jpg') }}')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Sign Up</h1>
                        <span class="subheading">Create your account here !</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <section class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                        <h1>S'inscrire</h1>
                    <div class="my-5">
                        
                        {{ form_start(registrationForm) }}
                            <div class="form-floating">
                                {{ form_row(registrationForm.firstname) }}
                            </div>
                            <div class="form-floating">
                                {{ form_row(registrationForm.name) }}
                            </div>
                            <div class="form-floating">
                                {{ form_row(registrationForm.email) }}
                            </div>
                            <div class="form-floating">
                                {{ form_row(registrationForm.plainPassword, { label: 'Password' }) }}
                            </div>
                            {# <div class="form-floating">
                                {{ form_row(registrationForm.images) }}
                            </div> #}
                            <br />
                            <!-- Submit Button-->
                            <button type="submit" class="btn btn-primary text-uppercase">Je m'inscris</button>
                            {{ form_end(registrationForm) }}
                        
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
